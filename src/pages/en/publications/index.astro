---
import Base from '../../../layouts/Base.astro';
import researchmap from '../../../data/researchmap.json';

const nav = [
  { label: 'Research', href: '/en/research/' },
  { label: 'Publications', href: '/en/publications/' },
  { label: 'Members', href: '/en/members/' },
  { label: 'Grants & Activities', href: '/en/activities/' },
  { label: 'Teaching', href: '/en/teaching/' },
  { label: 'Access', href: '/en/access/' },
  { label: 'About', href: '/en/about/' }
];

const sortByDate = (a, b) => (b.date_sort || '').localeCompare(a.date_sort || '');
const papers = [...(researchmap.published_papers || [])].sort(sortByDate);
const presentations = [...(researchmap.presentations || [])].sort(sortByDate);
const books = [...(researchmap.books || [])].sort(sortByDate);
const misc = [...(researchmap.misc || [])].sort(sortByDate);
---
<Base title="Publications | Kameoka Lab" lang="en" nav={nav} altLang={{ href: '/ja/publications/', label: 'JA' }}>
  <section class="section container">
    <h2>Journal / Conference Papers</h2>
    <div class="list">
      {papers.map((p) => (
        <div class="list-item">
          <strong>{p.title.en || p.title.ja}</strong>
          <div>{(p.authors.en || p.authors.ja || []).join(', ')}</div>
          <div>{p.venue.en || p.venue.ja}</div>
          <div class="badge">{p.date}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>Presentations</h2>
    <div class="list">
      {presentations.map((p) => (
        <div class="list-item">
          <strong>{p.title.en || p.title.ja}</strong>
          <div>{(p.authors.en || p.authors.ja || []).join(', ')}</div>
          <div>{p.venue.en || p.venue.ja}</div>
          <div class="badge">{p.date}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>Books</h2>
    <div class="list">
      {books.map((b) => (
        <div class="list-item">
          <strong>{b.title.en || b.title.ja}</strong>
          <div>{(b.authors.en || b.authors.ja || []).join(', ')}</div>
          <div>{b.publisher.en || b.publisher.ja}</div>
          <div class="badge">{b.date}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>Others</h2>
    <div class="list">
      {misc.map((m) => (
        <div class="list-item">
          <strong>{m.title.en || m.title.ja}</strong>
          <div>{(m.authors.en || m.authors.ja || []).join(', ')}</div>
          <div>{m.venue.en || m.venue.ja}</div>
          <div class="badge">{m.date}</div>
        </div>
      ))}
    </div>
  </section>
</Base>
