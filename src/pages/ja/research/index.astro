---
import Base from '../../../layouts/Base.astro';
import researchmap from '../../../data/researchmap.json';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects', ({ data }) => data.lang === 'ja');
const pages = await getCollection('pages', ({ data }) => data.lang === 'ja');
const page = pages.find((p) => p.slug === 'research');
const nav = [
  { label: '研究', href: '/ja/research/' },
  { label: '業績', href: '/ja/publications/' },
  { label: 'メンバー', href: '/ja/members/' },
  { label: '助成・活動', href: '/ja/activities/' },
  { label: '講義資料', href: '/ja/teaching/' },
  { label: 'アクセス', href: '/ja/access/' },
  { label: '研究室について', href: '/ja/about/' }
];
---
<Base title="研究 | 亀岡研究室" lang="ja" nav={nav} altLang={{ href: '/en/research/', label: 'EN' }}>
  <section class="section container">
    <h2>{page?.data.title}</h2>
    {page?.data.lead && <p>{page.data.lead}</p>}
  </section>

  <section class="section container">
    <h2>研究プロジェクト</h2>
    <div class="grid grid-2">
      {projects.map((p) => (
        <article class="card">
          <h3><a href={`/ja/research/${p.slug}/`}>{p.data.title}</a></h3>
          <div>{p.data.summary}</div>
          {p.data.year && <div class="badge">{p.data.year}</div>}
        </article>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>研究助成</h2>
    <div class="list">
      {(researchmap.research_projects || []).map((g) => (
        <div class="list-item">
          <strong>{g.title.ja || g.title.en}</strong>
          <div>{g.organization.ja || g.organization.en}</div>
          <div class="badge">{g.from} - {g.to}</div>
        </div>
      ))}
    </div>
  </section>
</Base>
