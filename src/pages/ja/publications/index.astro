---
import Base from '../../../layouts/Base.astro';
import researchmap from '../../../data/researchmap.json';

const nav = [
  { label: '研究', href: '/ja/research/' },
  { label: '業績', href: '/ja/publications/' },
  { label: 'メンバー', href: '/ja/members/' },
  { label: '助成・活動', href: '/ja/activities/' },
  { label: '講義資料', href: '/ja/teaching/' },
  { label: 'アクセス', href: '/ja/access/' },
  { label: '研究室について', href: '/ja/about/' }
];

const sortByDate = (a, b) => (b.date_sort || '').localeCompare(a.date_sort || '');
const papers = [...(researchmap.published_papers || [])].sort(sortByDate);
const presentations = [...(researchmap.presentations || [])].sort(sortByDate);
const books = [...(researchmap.books || [])].sort(sortByDate);
const misc = [...(researchmap.misc || [])].sort(sortByDate);
---
<Base title="業績 | 亀岡研究室" lang="ja" nav={nav} altLang={{ href: '/en/publications/', label: 'EN' }}>
  <section class="section container">
    <h2>論文</h2>
    <div class="list">
      {papers.map((p) => (
        <div class="list-item">
          <strong>{p.title.ja || p.title.en}</strong>
          <div>{(p.authors.ja || p.authors.en || []).join(', ')}</div>
          <div>{p.venue.ja || p.venue.en}</div>
          <div class="badge">{p.date}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>学会発表</h2>
    <div class="list">
      {presentations.map((p) => (
        <div class="list-item">
          <strong>{p.title.ja || p.title.en}</strong>
          <div>{(p.authors.ja || p.authors.en || []).join(', ')}</div>
          <div>{p.venue.ja || p.venue.en}</div>
          <div class="badge">{p.date}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>書籍</h2>
    <div class="list">
      {books.map((b) => (
        <div class="list-item">
          <strong>{b.title.ja || b.title.en}</strong>
          <div>{(b.authors.ja || b.authors.en || []).join(', ')}</div>
          <div>{b.publisher.ja || b.publisher.en}</div>
          <div class="badge">{b.date}</div>
        </div>
      ))}
    </div>
  </section>

  <section class="section container">
    <h2>その他</h2>
    <div class="list">
      {misc.map((m) => (
        <div class="list-item">
          <strong>{m.title.ja || m.title.en}</strong>
          <div>{(m.authors.ja || m.authors.en || []).join(', ')}</div>
          <div>{m.venue.ja || m.venue.en}</div>
          <div class="badge">{m.date}</div>
        </div>
      ))}
    </div>
  </section>
</Base>
