---
import '../styles/global.css';
import theme from '../data/theme.json';

const { title, lang, nav, altLang } = Astro.props;
const themeVars = `:root{--accent:${theme.accent};--accent-2:${theme.accent2};--bg:${theme.bg};--bg-2:${theme.bg2};--ink:${theme.ink};--muted:${theme.muted};--line:${theme.line};}`;
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>{themeVars}</style>
  </head>
  <body>
    <header class="nav">
      <div class="container nav-inner">
        <a class="brand" href={`/${lang}/`}>Kameoka Lab</a>
        <nav class="nav-links">
          {nav.map((item) => (
            <a href={item.href}>{item.label}</a>
          ))}
        </nav>
        <a class="lang-toggle" href={altLang.href}>{altLang.label}</a>
      </div>
    </header>
    <main class="main">
      <slot />
    </main>
    <footer class="footer">
      <div class="container footer-inner">
        <div>
          <div>Kameoka Lab / Kyushu University</div>
          <div>Media Design Department</div>
        </div>
        <a class="footer-edit" href="/admin/" aria-label="サイト編集">
          <svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.1 2.1 0 0 1 3 3L7 19l-4 1 1-4 12.5-12.5z" />
          </svg>
          サイト編集
        </a>
      </div>
    </footer>
  </body>
</html>
